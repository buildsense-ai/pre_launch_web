# Nginx配置 - 保存为 /etc/nginx/sites-available/prelaunch

server {
    listen 3003;
    server_name 43.139.19.144;

    # React应用主页 - 代理到你的React应用
    # 将React应用改为运行在3000端口，然后nginx代理
    location / {
        proxy_pass http://localhost:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Prefix /;

        # WebSocket支持（如果React应用使用WebSocket）
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # 处理React Router的客户端路由
        try_files $uri $uri/ /index.html;
    }

    # 方案2：如果想用nginx直接serve React构建文件，注释掉上面的location /，使用这个：
    # location / {
    #     alias /path/to/your/react/build/;
    #     index index.html;
    #     try_files $uri $uri/ /index.html;
    #
    #     # 处理React Router的客户端路由
    #     location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg)$ {
    #         expires 1y;
    #         add_header Cache-Control "public, immutable";
    #     }
    # }

    # 预发布页面
    location /prelaunch/ {
        alias /usr/gaosivenv/yunqi/pre_launch_web/;
        index index.html;

        # 静态资源优化
        location ~* \.(png|jpg|jpeg|gif|ico|svg)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
            add_header Access-Control-Allow-Origin *;
        }

        # 允许跨域 (如果需要)
        add_header Access-Control-Allow-Origin *;
        add_header Access-Control-Allow-Methods "GET, POST, OPTIONS";
        add_header Access-Control-Allow-Headers "DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range,Authorization";

        # 处理OPTIONS预检请求
        if ($request_method = 'OPTIONS') {
            return 204;
        }
    }

    # 日志
    access_log /var/log/nginx/prelaunch_access.log;
    error_log /var/log/nginx/prelaunch_error.log;
}
